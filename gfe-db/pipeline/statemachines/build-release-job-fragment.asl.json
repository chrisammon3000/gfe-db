{
    "StartAt": "BuildReleaseJob",
    "States": {
        "BuildReleaseJob": {
            "Type": "Task",
            "Resource": "arn:aws:states:::batch:submitJob.sync",
            "Next": "ValidateBuildOutput",
            "Parameters": {
                "JobDefinition": "${BuildJobDefinition}",
                "JobName": "${BuildJobName}",
                "JobQueue": "${BuildJobQueue}",
                "ContainerOverrides": {
                    "Environment": [
                        {
                            "Name": "EVENT",
                            "Value.$": "States.JsonToString($)"
                        }
                    ]
                }
            }
        },
        "ValidateBuildOutput": {
            "Type": "Pass",
            "End": true
        }
    }
}